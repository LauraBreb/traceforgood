<main class="form-signin">
   <h1 class="h3 mb-3 fw-normal">Please sign up</h1>
 
   <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
     <%= render "devise/shared/error_messages", resource: resource %>
 
         <div class="form-floating">
           <%= f.email_field :email, autofocus: true, class:"form-control", id:"floatingInput" %>
           <%= f.label :email, value:"Email address" %>
         </div>
 
         <div class="form-floating">
           <%= f.password_field :password, autofocus: true, class:"form-control", id:"floatingPasswordSignUp" %>
           <%= f.label :password, value:"Password" %>
         </div>
 
         <div class="form-floating">
           <%= f.password_field :password, autofocus: true, class:"form-control" %>
           <%= f.label :password_confirmation, value:"Password confirmation" %>
         </div>
 
     <div class="actions">
       <%= f.submit "Sign up", class:"w-100 btn btn-secondary"%>
     </div>
   <% end %>
</main>



